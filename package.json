{
  "name": "node-cloud-firestore-starter",
  "version": "1.0.0",
  "description": "Node.js Cloud Firestore Starter",
  "scripts": {
    "test": "jest",
    "build": "node ./node_modules/typescript/bin/tsc",
    "postinstall": "node ./node_modules/typescript/bin/tsc",
    "start": "node ./bin/www"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.(ts|tsx|js|html)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/perusworld/node-cloud-firestore-starter.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "module"
  ],
  "engines": {
    "node": "10.x"
  },
  "author": "Saravana Perumal Shanmugam <saravanaperumal@msn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perusworld/node-cloud-firestore-starter/issues"
  },
  "homepage": "https://github.com/perusworld/node-cloud-firestore-starter",
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.4",
    "@types/request": "^2.48.2",
    "@types/uuid": "^3.4.5",
    "jest": "^29.3.0",
    "request": "^2.88.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "@google-cloud/firestore": "^6.4.1",
    "body-parser": "^1.19.0",
    "color-convert": "^2.0.1",
    "express": "^4.17.3",
    "pug": "^3.0.1",
    "uuid": "^3.3.3"
  }
}
